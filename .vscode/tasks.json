{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/WindowsServicesRAG.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build All Projects",
			"type": "shell",
			"command": "dotnet build",
			"group": "build",
			"isBackground": false,
			"args": [
				"--configuration",
				"Release"
			],
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "build-release",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/WindowsServicesRAG.sln",
				"--configuration",
				"Release",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"group": "build"
		},
		{
			"label": "build-screenshot-capture",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/src/ScreenshotCapture/ScreenshotCapture.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"group": "build"
		},
		{
			"label": "clean",
			"command": "dotnet",
			"type": "process",
			"args": [
				"clean",
				"${workspaceFolder}/WindowsServicesRAG.sln"
			],
			"problemMatcher": "$msCompile",
			"group": "build"
		},
		{
			"label": "test-screenshot-cli",
			"command": "dotnet",
			"type": "process",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/src/ScreenshotCapture",
				"--",
				"cli",
				"--status",
				"--verbose"
			],
			"problemMatcher": [],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		}
	]
}