    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ScreenshotCapture CLI - DirectX Provider",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/ScreenshotCapture/bin/Debug/net9.0/ScreenshotCapture.dll",
            "args": [
                "cli",
                "--provider",
                "DirectX",
                "--verbose"
            ],
            "cwd": "${workspaceFolder}/src/ScreenshotCapture",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
